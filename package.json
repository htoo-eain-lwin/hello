{
  "name": "hello",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "3.2.1",
    "@hotwired/turbo-rails": "7.3.0",
    "@popperjs/core": "2.11.8",
    "autoprefixer": "10.4.14",
    "bootstrap": "5.3.0",
    "esbuild": "0.18.11",
    "i18n-js": "3.8.0",
    "postcss": "8.4.25",
    "postcss-cli": "10.1.0",
    "sass": "1.63.6"
  },
  "devDependencies": {
    "@nimblehq/eslint-config-nimble": "2.2.1",
    "@nimblehq/stylelint-config-nimble": "1.0.2",
    "eslint": "8.44.0",
    "stylelint": "15.10.1"
  },
  "scripts": {
    "eslint": "eslint . --color",
    "eslint:fix": "eslint . --color --fix",
    "stylelint": "stylelint **/*.scss --color",
    "stylelint:fix": "stylelint **/*.scss --color --fix",
    "codebase": "yarn eslint && yarn stylelint",
    "codebase:fix": "yarn eslint:fix && yarn stylelint:fix",
    "build": "node app/javascript/build.js",
    "build:css-production": "sass app/assets/stylesheets/application.scss app/assets/builds/application.css --no-source-map --load-path=node_modules --style=compressed",
    "build:css": "yarn build:css-dev --no-source-map --load-path=node_modules --style=compressed",
    "postcss": "postcss  public/assets/*.css --dir public/assets --config ./",
    "build:postcss": "postcss  app/assets/builds/*.css --dir app/assets/builds --config ./,",
    "build:css-dev": "sass  app/assets/stylesheets/application.scss app/assets/builds/application.css --no-source-map --load-path=node_modules"
  }
}
